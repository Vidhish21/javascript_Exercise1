let name="vidhi";
console.log(name.length);
//single quotes
let friend='appu';
console.log(friend);
//template literals
let a='vidhi';
let b='yakshi';
let f= `${b} is a friend of ${a}`;
console.log(f);
// STRING METHODS

let name='vidhi';
console.log(name.length);
console.log(name.toUpperCase());
console.log(name.toLowerCase());
//indexing in strings 1 slice
console.log(name.slice(2,4));//4th index not included
console.log(name.slice(2));
//replace
console.log(name.replace("vi", "samrid"));
//concat
let friend='yakshi';
console.log(name.concat(" is a friend of " +  friend , " ok" ));
